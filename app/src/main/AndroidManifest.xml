<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rizalfadiaalfikri.receipefood">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ReceipeFood">
        <activity android:name=".Screens.Form.AddReceipeActivity" android:parentActivityName=".Screens.Home.HomeActivity"></activity>
        <activity android:name=".Screens.Home.HomeActivity" />
        <activity android:name=".Screens.SigninSignup.SignUpActivity" />
        <activity android:name=".Screens.SigninSignup.SignInActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".Screens.SplashScreen.SpashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>